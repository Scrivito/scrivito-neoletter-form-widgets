{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "jsx": "react",
      "outDir": "./build",
      "resolveJsonModule": true
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "types/*.d.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  